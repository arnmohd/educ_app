<center>
	<div>
<h3>Sign In</h3>
</div>
<div style= "padding-top: 4%;">
<%= form_for @user, :as => :user, :url => sign_in_path(@user) do |f| %>
  <p >
    <%=  f.label 'email:'  %>
    <%= f.text_field :email  %>
  </p>
  <p>
    <%= f.label 'password:' %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Sign In' %>&nbsp;&nbsp;&nbsp;
    <%= f.submit 'Clear Form', :type => 'reset' %>
  </p>
<% end %>
</div>
</center>