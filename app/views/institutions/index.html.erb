<h1>Listing institutions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address line1</th>
    <th>Address line2</th>
    <th>Phone no</th>
    <th>Logo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @institutions.each do |institution| %>
  <tr>
    <td><%= institution.name %></td>
    <td><%= institution.address_line1 %></td>
    <td><%= institution.address_line2 %></td>
    <td><%= institution.phone_no %></td>
    <td><%= institution.logo %></td>
    <td><%= link_to 'Show', institution %></td>
    <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
    <td><%= link_to 'Destroy', institution, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

